{
  "name": "overlay-terminal",
  "displayName": "Overlay Terminal: New Window + Close On Exit",
  "version": "0.2.0",
  "publisher": "FreeDebreuil",
  "description": "Open a terminal profile in a separate window and auto-close on shell exit, returning focus to the editor (sends Esc for VSCodeVim).",
  "license": "Unlicense",
  "engines": {
    "vscode": "^1.103.0"
  },
  "main": "dist/extension.js",
  "repository": "https://github.com/F286/overlay-terminal",
  "categories": [
    "Other"
  ],
  "keywords": [
    "terminal",
    "overlay",
    "profiles",
    "new window",
    "vim"
  ],
  "activationEvents": [
    "onCommand:overlayTerminals.openProfile",
    "onCommand:overlayTerminals.pickProfile"
  ],
  "contributes": {
    "commands": [
      {
        "command": "overlayTerminals.openProfile",
        "title": "Overlay Terminal: Open Profile"
      },
      {
        "command": "overlayTerminals.pickProfile",
        "title": "Overlay Terminal: Pick Profile"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "build": "npm run compile",
    "package": "npx @vscode/vsce package -o overlay-terminal.vsix",
    "install": "code --install-extension overlay-terminal.vsix --force",
    "deploy": "npm run build && npm run package && npm run install"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/vscode": "^1.103.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.9.2"
  }
}
